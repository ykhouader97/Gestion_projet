@model Gestion_Projet.Models.MembreEquipe

@{
    ViewData["Title"] = "Détails du membre";
    var tachesEnCours = Model.Taches.Where(t => !t.EstTerminee).ToList();
    var tachesTerminees = Model.Taches.Where(t => t.EstTerminee).ToList();
    var tauxCompletion = Model.Taches.Any() ? (int)((double)tachesTerminees.Count / Model.Taches.Count * 100) : 0;
}

<div class="row mb-3">
    <div class="col-md-8">
        <h1><i class="bi bi-person-circle"></i> @Model.NomComplet</h1>
    </div>
    <div class="col-md-4 text-end">
        <div class="btn-group" role="group">
            <form asp-action="ToggleActif" asp-route-id="@Model.Id" method="post" class="d-inline">
                <button type="submit" class="btn btn-@(Model.EstActif ? "secondary" : "success")">
                    <i class="bi bi-@(Model.EstActif ? "x-circle" : "check-circle")"></i> 
                    @(Model.EstActif ? "Désactiver" : "Activer")
                </button>
            </form>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                <i class="bi bi-pencil"></i> Modifier
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Retour
            </a>
        </div>
    </div>
</div>

<!-- Informations du membre -->
<div class="row mb-4">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body text-center">
                @if (!string.IsNullOrEmpty(Model.PhotoUrl))
                {
                    <img src="@Model.PhotoUrl" alt="@Model.NomComplet" class="rounded-circle mb-3" style="width: 150px; height: 150px; object-fit: cover;">
                }
                else
                {
                    <div class="rounded-circle bg-primary text-white d-inline-flex align-items-center justify-content-center mb-3" style="width: 150px; height: 150px; font-size: 3rem;">
                        @Model.Prenom.Substring(0, 1)@Model.Nom.Substring(0, 1)
                    </div>
                }
                <h4>@Model.NomComplet</h4>
                <p class="text-muted">@Model.Poste</p>
                <p><i class="bi bi-envelope"></i> <a href="mailto:@Model.Email">@Model.Email</a></p>
                @if (Model.DateEmbauche.HasValue)
                {
                    <p><small class="text-muted">Embauché le @Model.DateEmbauche.Value.ToString("dd/MM/yyyy")</small></p>
                }
                <div class="mt-3">
                    @if (Model.EstActif)
                    {
                        <span class="badge bg-success">Actif</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Inactif</span>
                    }
                    @if (Model.ProjetsLed.Any())
                    {
                        <span class="badge bg-primary">Chef de projet</span>
                    }
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-8">
        <!-- Statistiques -->
        <div class="card mb-3">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0"><i class="bi bi-bar-chart"></i> Statistiques</h5>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-md-3">
                        <div class="card">
                            <div class="card-body">
                                <h3 class="text-primary">@Model.ProjetsLed.Count</h3>
                                <small>Projets dirigés</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card">
                            <div class="card-body">
                                <h3 class="text-info">@Model.Taches.Count</h3>
                                <small>Tâches assignées</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card">
                            <div class="card-body">
                                <h3 class="text-warning">@tachesEnCours.Count</h3>
                                <small>En cours</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card">
                            <div class="card-body">
                                <h3 class="text-success">@tachesTerminees.Count</h3>
                                <small>Terminées</small>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="mt-3">
                    <h6>Taux de complétion: @tauxCompletion%</h6>
                    <div class="progress" style="height: 25px;">
                        <div class="progress-bar bg-success" role="progressbar" style="width: @tauxCompletion%" aria-valuenow="@tauxCompletion" aria-valuemin="0" aria-valuemax="100">
                            @tauxCompletion%
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Projets dirigés -->
        @if (Model.ProjetsLed.Any())
        {
            <div class="card mb-3">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-folder"></i> Projets dirigés</h5>
                </div>
                <div class="card-body">
                    <div class="list-group">
                        @foreach (var projet in Model.ProjetsLed)
                        {
                            <a asp-controller="Projets" asp-action="Details" asp-route-id="@projet.Id" class="list-group-item list-group-item-action">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1">@projet.Nom</h6>
                                    <span class="badge bg-@(projet.Statut == Gestion_Projet.Models.StatutProjet.EnCours ? "success" : "secondary")">
                                        @projet.Statut
                                    </span>
                                </div>
                                <div class="progress mt-2" style="height: 5px;">
                                    <div class="progress-bar" role="progressbar" style="width: @projet.PourcentageAvancement%"></div>
                                </div>
                            </a>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Tâches assignées -->
<div class="card">
    <div class="card-header bg-success text-white">
        <h5 class="mb-0"><i class="bi bi-list-check"></i> Tâches assignées</h5>
    </div>
    <div class="card-body">
        @if (Model.Taches.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Titre</th>
                            <th>Projet</th>
                            <th>Échéance</th>
                            <th>Priorité</th>
                            <th>Statut</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var tache in Model.Taches.OrderBy(t => t.DateEcheance))
                        {
                            <tr class="@(tache.EstTerminee ? "table-success" : tache.EstEnRetard ? "table-danger" : "")">
                                <td>
                                    <a asp-controller="Taches" asp-action="Details" asp-route-id="@tache.Id">
                                        @tache.Titre
                                    </a>
                                </td>
                                <td>
                                    <a asp-controller="Projets" asp-action="Details" asp-route-id="@tache.ProjetId">
                                        @tache.Projet?.Nom
                                    </a>
                                </td>
                                <td>@(tache.DateEcheance?.ToString("dd/MM/yyyy") ?? "N/A")</td>
                                <td>
                                    <span class="badge bg-@(tache.Priorite == Gestion_Projet.Models.Priorite.Basse ? "success" : 
                                                              tache.Priorite == Gestion_Projet.Models.Priorite.Moyenne ? "info" : 
                                                              tache.Priorite == Gestion_Projet.Models.Priorite.Haute ? "warning" : "danger")">
                                        @tache.Priorite
                                    </span>
                                </td>
                                <td>
                                    <span class="badge bg-@(tache.Statut == Gestion_Projet.Models.StatutTache.Terminee ? "success" : "primary")">
                                        @tache.Statut
                                    </span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <p class="text-muted">Aucune tâche assignée.</p>
        }
    </div>
</div>
