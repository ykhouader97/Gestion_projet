@model Gestion_Projet.Models.Projet

@{
    ViewData["Title"] = "Créer un projet";
}

<h1><i class="bi bi-plus-circle"></i> Créer un nouveau projet</h1>
<hr />

<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            
            <div class="mb-3">
                <label asp-for="Nom" class="form-label"></label>
                <input asp-for="Nom" class="form-control" />
                <span asp-validation-for="Nom" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="DateDebut" class="form-label"></label>
                    <input asp-for="DateDebut" class="form-control" type="date" />
                    <span asp-validation-for="DateDebut" class="text-danger"></span>
                </div>
                
                <div class="col-md-6 mb-3">
                    <label asp-for="DateFinPrevue" class="form-label"></label>
                    <input asp-for="DateFinPrevue" class="form-control" type="date" />
                    <span asp-validation-for="DateFinPrevue" class="text-danger"></span>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Budget" class="form-label"></label>
                    <div class="input-group">
                        <input asp-for="Budget" class="form-control" type="number" step="0.01" />
                        <span class="input-group-text">DH</span>
                    </div>
                    <span asp-validation-for="Budget" class="text-danger"></span>
                </div>
                
                <div class="col-md-6 mb-3">
                    <label asp-for="ChefProjetId" class="form-label">Chef de projet</label>
                    <select asp-for="ChefProjetId" class="form-select" asp-items="ViewBag.Membres">
                        <option value="">-- Sélectionner un chef de projet --</option>
                    </select>
                    <span asp-validation-for="ChefProjetId" class="text-danger"></span>
                </div>
            </div>
            
            <div class="mb-3">
                <label asp-for="Statut" class="form-label"></label>
                <select asp-for="Statut" class="form-select" asp-items="ViewBag.Statuts"></select>
                <span asp-validation-for="Statut" class="text-danger"></span>
            </div>
            
            <div class="mt-4">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save"></i> Enregistrer
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-x-circle"></i> Annuler
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
