@model Gestion_Projet.Models.Tache

@{
    ViewData["Title"] = "Modifier la tâche";
}

<h1><i class="bi bi-pencil"></i> Modifier la tâche</h1>
<hr />

<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="DateCreation" />
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            
            <div class="mb-3">
                <label asp-for="Titre" class="form-label"></label>
                <input asp-for="Titre" class="form-control" />
                <span asp-validation-for="Titre" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="ProjetId" class="form-label">Projet</label>
                    <select asp-for="ProjetId" class="form-select" asp-items="ViewBag.Projets"></select>
                    <span asp-validation-for="ProjetId" class="text-danger"></span>
                </div>
                
                <div class="col-md-6 mb-3">
                    <label asp-for="MembreId" class="form-label">Assigné à</label>
                    <select asp-for="MembreId" class="form-select" asp-items="ViewBag.Membres">
                        <option value="">-- Non assigné --</option>
                    </select>
                    <span asp-validation-for="MembreId" class="text-danger"></span>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-4 mb-3">
                    <label asp-for="DateEcheance" class="form-label"></label>
                    <input asp-for="DateEcheance" class="form-control" type="date" />
                    <span asp-validation-for="DateEcheance" class="text-danger"></span>
                </div>
                
                <div class="col-md-4 mb-3">
                    <label asp-for="Priorite" class="form-label"></label>
                    <select asp-for="Priorite" class="form-select" asp-items="ViewBag.Priorites"></select>
                    <span asp-validation-for="Priorite" class="text-danger"></span>
                </div>
                
                <div class="col-md-4 mb-3">
                    <label asp-for="Statut" class="form-label"></label>
                    <select asp-for="Statut" class="form-select" asp-items="ViewBag.Statuts"></select>
                    <span asp-validation-for="Statut" class="text-danger"></span>
                </div>
            </div>
            
            <div class="mt-4">
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-save"></i> Enregistrer les modifications
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-x-circle"></i> Annuler
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
